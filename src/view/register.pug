extends ./pages/general.pug

block content
  .container.mt-5
    h1 Форма регистрации

    if loginErr.length > 0
        .form_invalid
            p.form__error-msg.position-static.mb-3.mt-3 #{registerErr}

    form(role='form', action="/register", method="post", style='max-width: 300px;')
      .form-group
        input.form-control(type='text', name="username", placeholder='Ваши имя')
      .form-group
        input.form-control(type='password', name="password", placeholder='Пароль')
      button.btn.btn-default(type='submit') Готово